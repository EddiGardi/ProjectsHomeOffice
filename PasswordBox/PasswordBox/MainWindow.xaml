<Window x:Class="PasswordBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordBox"
        mc:Ignorable="d"
        Title="Passwortabfrage" Height="200" Width="250">
    <StackPanel Margin="10">
        <Label>Benutzername: </Label>
        <TextBox Name="tbUsername"></TextBox>
        <Label>Passwort: </Label>
        <PasswordBox MaxLength="16" Name="pbPassword"></PasswordBox>
        <Button Margin="5" Content="Einloggen" Click="Button_Click"/>
    </StackPanel>
</Window>
